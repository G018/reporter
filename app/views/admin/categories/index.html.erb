<% content_for :header do %>
  <section class="content-header">
    <h1>
      Categories
      <small>list</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/admin"><i class="fa fa-home"></i></a></li>
      <li class="active">Categories</li>
    </ol>
  </section>
<% end %>

<div class="col-xs-12">
  <div class="box" style="max-width: 500px;">
    <div class="box-body table-responsive no-padding">
      <table class="table table-bordered table-hover">
        <colgroup>
          <col span="3" style="width:30px;">
        </colgroup>

        <thead>

          <tr>
            <th colspan="3">Actions</th>
            <th>Name</th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <%= link_to [:admin, category] do %>
                  <i class="fa fa-eye"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_admin_category_path(category) do %>
                  <i class="fa fa-edit"></i>
                <% end %>
              </td>
              <td>
                <%= link_to [:admin, category], method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-close"></i>
                <% end %>
              </td>
              <td><%= category.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /.box-body -->
    <div class="box-footer">
      <%= link_to new_admin_category_path do %>
        <button class="btn btn-primary btn-block btn-flat">
          <i class="fa fa-plus"></i> New Category
        </button>
      <% end %>
    </div><!-- box-footer -->
  </div><!-- /.box -->
</div>
