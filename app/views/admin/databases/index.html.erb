<% content_for :header do %>
  <section class="content-header">
    <h1>
      Databases
      <small>list</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/admin"><i class="fa fa-home"></i></a></li>
      <li class="active">Databases</li>
    </ol>
  </section>
<% end %>

<div class="col-xs-12">
  <div class="box">
  <div class="box-body table-responsive no-padding">
    <table class="table table-bordered table-hover">
      <colgroup>
        <col span="3" style="width:30px;">
      </colgroup>

      <thead>
        <tr>
          <th colspan="3">Actions</th>
          <th>Name</th>
          <th>Database</th>
          <th>Adapter</th>
          <th>Host</th>
          <th>Port</th>
          <th>Username</th>
        </tr>
      </thead>

      <tbody>
        <% @databases.each do |database| %>
          <tr>
            <td>
              <%= link_to [:admin, database] do %>
                <i class="fa fa-eye"></i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_admin_database_path(database) do %>
                <i class="fa fa-edit"></i>
              <% end %>
            </td>
            <td>
              <%= link_to [:admin, database], method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-close"></i>
              <% end %>
            </td>
            <td><%= database.name %></td>
            <td><%= database.database %></td>
            <td><%= database.adapter %></td>
            <td><%= database.host %></td>
            <td><%= database.port %></td>
            <td><%= database.username %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!-- /.box-body -->
  <div class="box-footer">
    <%= link_to new_admin_database_path do %>
      <button class="btn btn-primary btn-block btn-flat">
        <i class="fa fa-plus"></i> New Database
      </button>
    <% end %>
  </div><!-- box-footer -->
  </div><!-- /.box -->
</div>
