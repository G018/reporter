<%= form_for [:admin, @database] do |f| %>
  <div class="col-md-4">
    <div class="box">
      <div class="box-body">
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :database %><br>
          <%= f.text_field :database, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :adapter %><br>
          <%= f.text_field :adapter, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :host %><br>
          <%= f.text_field :host, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :port %><br>
          <%= f.text_field :port, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :username %><br>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password %><br>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <br>
        <div class="form-group">
          <%= f.submit class: "form-control btn btn-success" %>
        </div>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>

  <% if @database.errors.any? %>
    <div class="col-md-8">
      <div class="box box-solid box-danger">
        <div class="box-header with-border">
          <h3 class="box-title"><%= @database.errors.count > 1 ? "Errors" : "Error" %> to save database </h3>
          <div class="box-tools pull-right">
            <!-- Buttons, labels, and many other things can be placed here! -->
            <!-- Here is a label for example -->
            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
          </div><!-- /.box-tools -->
        </div><!-- /.box-header -->
        <div class="box-body">
          <ul>
            <% @database.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
  <% end %>
<% end %>
