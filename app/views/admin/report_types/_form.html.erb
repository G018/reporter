<%= form_for [:admin, @report_type] do |f| %>
  <% if @report_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report_type.errors.count, "error") %> prohibited this report_type from being saved:</h2>

      <ul>
      <% @report_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :database_id %><br>
    <%= f.collection_select(:database_id, Database.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.fields_for :fields do |field| %>
      <%= render 'field_fields', f: field %>
    <% end %>
    <div>
      <%= link_to_add_association "Add Field", f, :fields %>
    </div>
  </div>
  <div class="field">
    <%= f.label :sql %><br>
    <%= f.text_area :sql %>
  </div class="field">
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
