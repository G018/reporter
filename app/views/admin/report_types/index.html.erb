<% content_for :header do %>
  <section class="content-header">
    <h1>
      Report Types
      <small>list</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/admin"><i class="fa fa-home"></i></a></li>
      <li class="active">Report Types</li>
    </ol>
  </section>
<% end %>

<div class="col-xs-12">
  <div class="box">
    <div class="box-body table-responsive no-padding">
      <table class="table table-bordered table-hover">
        <colgroup>
          <col span="3" style="width:30px;">
        </colgroup>

        <thead>
          <tr>
            <th colspan="3">Actions</th>
            <th>Name</th>
            <th>Category</th>
            <th>Database</th>
            <th>Description</th>
          </tr>
        </thead>

        <tbody>
          <% @report_types.each do |report_type| %>
            <tr>
              <td>
                <%= link_to [:admin, report_type] do %>
                  <i class="fa fa-eye"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_admin_report_type_path(report_type) do %>
                  <i class="fa fa-edit"></i>
                <% end %>
              </td>
              <td>
                <%= link_to [:admin, report_type], method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-close"></i>
                <% end %>
              </td>
              <td><%= report_type.name %></td>
              <td><%= report_type.category.name %></td>
              <td><%= report_type.database.name %></td>
              <td><%= report_type.description %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- /.box-body -->
    <div class="box-footer">
      <%= link_to new_admin_report_type_path do %>
        <button class="btn btn-primary btn-block btn-flat">
          <i class="fa fa-plus"></i> New Report Type
        </button>
      <% end %>
    </div><!-- box-footer -->
  </div><!-- /.box -->
</div>
