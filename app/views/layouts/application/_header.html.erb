<!-- Main Header -->
<header class="main-header">

  <!-- Logo -->
  <a href="/" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>Rep</b></span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Reporter</b></span>
  </a>

  <!-- Header Navbar -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- User Account Menu -->
        <% if user_signed_in? %>
          <li class="dropdown user user-menu">
            <!-- Menu Toggle Button -->
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <!-- The login icon in the navbar--> 
              <i class="fa fa-user"></i>
              <!-- hidden-xs hides the text on small devices so only the image appears. -->
              <span class="hidden-xs"><%= current_user.name.titlecase %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- The user image in the menu -->
              <li class="user-header">
                <img src="/assets/user2-160x160.jpg" class="img-circle" alt="User Image" />
                <p>
                  <%= current_user.name.titlecase %> - User
                  <small><%= current_user.email %></small>
                </p>
              </li>
              <!-- Menu Body -->
              <li class="user-body">
                <div class="col-xs-4 text-center">
                  <a href="#">Followers</a>
                </div>
                <div class="col-xs-4 text-center">
                  <a href="#">Sales</a>
                </div>
                <div class="col-xs-4 text-center">
                  <a href="#">Friends</a>
                </div>
              </li>
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <a href="#" class="btn btn-default btn-flat">Profile</a>
                </div>
                <div class="pull-right">
                  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="user user-menu">
            <!-- Menu Toggle Button -->
            <%= link_to new_user_session_path do %>
              <!-- The login icon in the navbar--> 
              <i class="fa fa-user-plus"></i>
              <!-- hidden-xs hides the text on small devices so only the image appears. -->
              <span class="hidden-xs">Login</span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
